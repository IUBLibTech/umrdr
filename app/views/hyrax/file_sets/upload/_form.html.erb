<% if !@presenter.current_ability.admin? %>
  <div class="well">
    <div class="well-inner-wrapper">
      <!--Please upload your files to <a href="https://umich.app.box.com/folder/45101723215" target="_blank">this MBox folder</a>.
      If you require assistance, <a href="<%= hyrax.contact_path %>">contact Us for assistance</a>.-->
      <br/>
      The next step is to upload your data and documentation files to M-Box
      for review. Once in M-Box, upload your files by dragging and dropping or
      browsing files on your computer. If your dataset is larger than 2GB
      please contact Research Data Services.
      <br/><br/>
      Research Data Services will contact you after a preliminary review of your
      dataset, typically in 1-2 business days.
      <br/><br/>
      <%= link_to "Link to M-Box deposit directory", @presenter.box_link, class: 'btn btn-default', target: "_blank" %>
      <br/><br/>
      If you have any questions please contact
      <a href="mailto: researchdataservices@umich.edu">researchdataservices@umich.edu</a>.
    </div>
  </div>
<% else %>
<% if @presenter.tombstone.blank? && @presenter.current_ability.admin? %>
  <div class="well">
    <%= form_for(FileSet.new, url: main_app.hyrax_file_sets_path(parent_id: @presenter.id), html: { multipart: true, id: 'fileupload' }) do |f| %>
      <%= render 'hyrax/file_sets/upload/form_fields', presenter: @presenter, upload_set_id: ActiveFedora::Noid::Service.new.mint %>
  </div>
    <% end %>
    <%# editor    = can?(:edit,    @presenter.id) %>
    <% if @presenter.file_set_presenters.present? && !@presenter.identifiers_minted?(:doi) %>
    <div class="well">
      <h2 class="well-title">Mint DOI</h2>
      <div class="well-inner-wrapper">
      <%= form_tag(main_app.identifiers_hyrax_generic_work_path(@presenter.id), method: 'post') do %>
        <%= hidden_field_tag('generic_work[nop]') %>
        <p class="alert alert-info">You can mint a DOI once you have uploaded all your files. Once a DOI is minted,
          you may not upload additional files, edit, or delete your work. For questions or help,
          please <strong><%= link_to "contact Deep Blue Data", "https://deepblue.lib.umich.edu/data/contact" %></strong>.</p>
         <%= submit_tag(t('simple_form.actions.generic_work.mint_doi'), class: 'btn btn-primary') %>
       </div>
     </div>
        <% end %>
      <% end %>
<% elsif @presenter.tombstone.blank? %>
<% unless @presenter.identifiers_minted?(:doi) && @presenter.solr_document.public? %>
  <div class="well">
    <%= form_for(FileSet.new, url: main_app.hyrax_file_sets_path(parent_id: @presenter.id), html: { multipart: true, id: 'fileupload' }) do |f| %>
      <%= render 'hyrax/file_sets/upload/form_fields', presenter: @presenter, upload_set_id: ActiveFedora::Noid::Service.new.mint %>
  </div>
    <% end %>
    <%# editor    = can?(:edit,    @presenter.id) %>
    <% if @presenter.editor? && @presenter.file_set_presenters.present? && !@presenter.identifiers_minted?(:doi) %>
      <div class="well">
        <h2 class="well-title">Mint DOI</h2>
        <div class="well-inner-wrapper">
        <%= form_tag(main_app.identifiers_hyrax_generic_work_path(@presenter.id), method: 'post') do %>
          <%= hidden_field_tag('generic_work[nop]') %>
          <p class="alert alert-info">You can mint a DOI once you have uploaded all your files. Once a DOI is minted,
            you may not upload additional files, edit, or delete your work. For questions or help,
            please <strong><%= link_to "contact Deep Blue Data", "https://deepblue.lib.umich.edu/data/contact" %></strong>.</p>
           <%= submit_tag(t('simple_form.actions.generic_work.mint_doi'), class: 'btn btn-primary') %>
         </div>
      </div>
        <% end %>
      <% end %>
<% end %>
<% end %>
<% end %>